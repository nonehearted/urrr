#include <iostream>
int main() {
    int height = 6;
    for (int i = 1; i <= height; i++) {
        for (int j = height; j > i; j--) {
            std::cout << ".";
        }
        for (int j = 1; j <= (2 * i - 1); j++) {
            std::cout << "*";
        }
        std::cout << std::endl;
    }

    for (int i = height - 1; i >= 1; i--) {
        for (int j = height; j > i; j--) {
            std::cout << ".";
        }
        for (int j = 1; j <= (2 * i - 1); j++) {
            std::cout << "*";
        }
        std::cout << std::endl;
    }

    return 0;
}
